{
  "name": "Twitter Spam Report Button",
  "description" : "Extension for reporting followers as spam and block them",
  "version": "1.0.2",
  "browser_action": {
    "default_popup": "reportTool.html",
    "default_icon": "reportTool_extensions.png"
  },
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*"],
      "js": ["jquery-3.3.1.slim.min.js", "contentScript.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "permissions": [
    "webRequest",
    "https://twitter.com/*"
  ]
}
